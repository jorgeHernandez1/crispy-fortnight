<div class="row mt-2 col align-center text-center mx-auto">
    <div class="card flex-fill" style="width: 64rem;">
        <div class="card-header text-white font-weight-bolder bg-primary">
            Road Blocks
        </div>
        <ul class="list-group list-group-flush">
            {{#each questions as |question|}}
            <a href="#" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">{{ question.display_name }}</h5>
                    <small class="text-muted">{{question.created_at}}</small>
                </div>
                <p class="mb-1">{{question.user_content}}</p>
            </a>
            {{/each}}
        </ul>
        <div class="card-footer">
            <button type="button" class="btn btn-outline-success">Success</button>
        </div>
    </div>
</div>



